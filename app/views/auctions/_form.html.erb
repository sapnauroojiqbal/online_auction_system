<%= form_with model: @auction, remote: true do |form| %>
  <% if @auction.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-4">
      <h2 class="text-sm font-semibold text-red-800">
        <%= pluralize(@auction.errors.count, "error") %> prohibited this auction from being saved:
      </h2>
      <ul class="mt-3 list-disc list-inside text-sm text-red-600">
        <% @auction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :start_time  %>
    <%= form.datetime_field :start_time, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div class="my-5">
    <%= form.label :end_time %>
    <%= form.datetime_field :end_time, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div class="field">
    <%= form.label :minimum_bids, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
    <div class="mt-2">
      <%= form.number_field :minimum_bids, min: 1, class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true %>
    </div>
  </div>

  <div class="m-4">
    <%= form.submit "Save auction", class: 'inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-full gradient-bg hover:opacity-80 focus:ring-4 focus:outline-none focus:ring-pink-300 dark:focus:ring-pink-800 shadow-lg shadow-pink-500/50 dark:shadow-lg dark:shadow-pink-800/80', style: 'background-image: linear-gradient(to right, #b1fcfc, #f2b0fc);' %>
  </div>
<% end %>
