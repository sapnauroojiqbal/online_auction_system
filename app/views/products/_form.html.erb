<%= form_with model: @product, local: true do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-4">
      <h2 class="text-sm font-semibold text-red-800">
        <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
      </h2>
      <ul class="mt-3 list-disc list-inside text-sm text-red-600">
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= form.label :name, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
  <div class="mt-2">
  <%= form.text_field :name, autofocus: true, class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
</div>
</div>

<div class="field">
<%= form.label :description, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
<div class="mt-2">
<%=form.text_area :description,  class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
</div>
</div>

<div class="field">
<%= form.label :minimum_bid_amount, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
<div class="mt-2">
<%=form.number_field :minimum_bid_amount, class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
</div>
</div>


<%= render "images", form: form, product: @product %>
<%= render "image_preview", form: form, product: @product %>


  <div class="mb-4">
    <%= form.submit "Save Product",  class: 'inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-full gradient-bg hover:opacity-80 focus:ring-4 focus:outline-none focus:ring-pink-300 dark:focus:ring-pink-800 shadow-lg shadow-pink-500/50 dark:shadow-lg dark:shadow-pink-800/80', style: 'background-image: linear-gradient(to right, #b1fcfc, #f2b0fc);' %>
  </div>
<% end %>
