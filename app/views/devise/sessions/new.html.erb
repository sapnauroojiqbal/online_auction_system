<div class="flex flex-row justify-between">
  <section class="bg-white dark:bg-gray-900">
    <div class="grid py-8 px-4 mx-auto max-w-screen-xl lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-8">
      <div class="place-self-center mr-auto lg:col-span-7">
        <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm flex-row">
          <%= link_to root_path do %>
            <img class="mx-auto h-50 w-auto" src="<%= asset_path('icons-auction-100.png') %>" alt="logo">
            <img class="mx-auto" src="<%= asset_path('app_name.png') %>" alt="Auctioneer">
          <% end %>
            </div>
            <div class="backdrop-blur-sm bg-white/30 rounded-lg border-gray-900 border-2 shadow-lg px-6 py-8 glassmorphic-container">
  <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Log in to your account</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-10 sm:mx-auto sm:w-full sm:max-w-sm border-1 rounded-full mb-2 glassmorphic-form' }) do |f| %>
    <div class="field glassmorphic-field">
      <%= f.label :email, class:"block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.email_field :email,required:true, autofocus: true, class:"block w-full rounded-full border-1 py-1.5 text-gray-900 glassmorphic-input" %>
      </div>
    </div>

    <div class="field glassmorphic-field">
      <%= f.label :password, class:"block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.password_field :password,required:true, autocomplete: "off", class:"block w-full rounded-full border-1 py-1.5 text-gray-900 glassmorphic-input" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field glassmorphic-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= f.submit "Log in", class: 'w-full inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-full gradient-bg hover:opacity-80 focus:ring-4 focus:outline-none focus:ring-pink-300 dark:focus:ring-pink-800 glassmorphic-button', style: 'background-image: linear-gradient(to right, #b1fcfc, #f2b0fc);' %>
    </div>
  <% end %>
  <div class="mt-4">
     Do not have an account?
    <%= render "devise/shared/links" %>
  </div>
</div>

        </div>
      </div>
    </div>
  </section>

  <div class="hidden lg:mt-0 lg:col-span-8 lg:flex items-center absolute right-0 top-0">
    <div class="flex items-center ">
      <img src="<%= asset_path('banner-right.png') %>" alt="auction vector">
    </div>
    </div>
</div>
