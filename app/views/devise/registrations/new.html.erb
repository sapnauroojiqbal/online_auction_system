<div class="flex flex-row justify-between">
<section class="bg-white dark:bg-gray-900">
  <div class="grid py-8 px-4 mx-auto max-w-screen-xl lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-8">
    <div class="place-self-center mr-auto lg:col-span-7">
      <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
      <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <div class="sm:mx-auto sm:w-full sm:max-w-sm flex-row">
      <%= link_to root_path do %>
        <img class="mx-auto h-50 w-auto" src="<%= asset_path('icons-auction-100.png') %>" alt="logo">
        <img class="mx-auto" src="<%= asset_path('app_name.png') %>" alt="Auctioneer">
      <% end %>
      </div>
        </div>

        <div class="backdrop-blur-sm bg-white/30 rounded-lg border-gray-900 border-2 shadow-lg px-6 py-8 glassmorphic-container">
        <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
      Sign up </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
        <%= f.label :first_name, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <%= f.text_field :first_name, class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
        </div>

      <div class="field">
        <%= f.label :last_name, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <%= f.text_field :last_name, class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
        </div>

      <div class="field">
        <%= f.label :email, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <%= f.email_field :email, autofocus: true, class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
      </div>



      <div class="field">
        <%= f.label :user_type, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <%= f.select :user_type, [['Buyer', 'buyer'], ['Seller', 'seller']], {}, class: 'form-control' , class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
        </div>

        <div class="field">
        <%= f.label :gender, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <%= f.select :gender, [['Male', 'male'], ['Female', 'female'], ['Other', "other"]], {}, class: 'form-control' , class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
        </div>

      <div class="field">
        <%= f.label :phone_number, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <%= f.text_field :phone_number, class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
        </div>

        <div class="field">
        <%= f.label :address, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <%= f.text_field :address, class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
        </div>

      <div class="field">
      <%= f.label :avatar,class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <div class="relative rounded-full border-2 border-gray-300 focus-within:border-indigo-600 transition duration-300">
        <label for="avatar" class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-gray-900 rounded-full cursor-pointer hover:border-black hover:border-solid hover:bg-white hover:text-black shadow-md border-2 border-gray-400">
        Choose File
        </label>
        <%= f.file_field :avatar, id: "avatar", class: "sr-only" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <%= f.password_field :password, autocomplete: "off", class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation,class:"block text-sm leading-6 text-gray-900 font-bold mt-2" %>
        <div class="mt-2">
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"block w-full rounded-full border-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
        </div>
      </div>
        </div>

        <div class="mt-2">
        <%= f.submit "Sign up", class: 'inline-flex justify-center items-center py-3 px-5 mt-5 text-base font-medium text-center text-white rounded-full gradient-bg hover:opacity-80 focus:ring-4 focus:outline-none focus:ring-pink-300 dark:focus:ring-pink-800 shadow-lg shadow-pink-500/50 dark:shadow-lg dark:shadow-pink-800/80', style: 'background-image: linear-gradient(to right, #b1fcfc, #f2b0fc);' %>
        </div>
    <% end %>

    <div>
    or Already Have account
    <%= link_to 'Sign In', new_user_session_path, class: 'inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-gray-900 rounded-full border border-gray-300 focus:ring-4 focus:ring-gray-100 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800 hover:border-black hover:border-solid hover:bg-white hover:text-black shadow-md' %>
    </div>
    </div>
    </div>
    </div>
    </div>
    </section>
    <div class="hidden lg:mt-0 lg:col-span-8 lg:flex items-center absolute right-0 top-0">
    <div class="flex items-center ">
      <img src="<%= asset_path('banner-right.png') %>" alt="auction vector">
    </div>
    </div>
</div>
